---
version: "3.8"

services:
  qbittorrent:
    container_name: qbittorrent
    hostname: qbittorrent
    image: ghcr.io/linuxserver/qbittorrent:{{ qbit_version }}
    restart: unless-stopped
    environment:
      - PUID={{ ansible_facts.user_uid }}
      - PGID={{ ansible_facts.user_gid }}
      - TZ={{ timezone }}
      - WEBUI_PORT=8082
    volumes:
      - {{ project_dir }}/qbittorrent/data:/config
{% if 'nfs' == qbit_storage %}
      - downloads:/downloads
{% elif 'path' == qbit_storage %}
      - {{ qbit_download_path }}:/downloads
{% endif %}
    networks:
      - {{ qbit_network }}
    ports:
      - 6881:6881
      - 6881:6881/udp
      - 8082:8082
    labels:
      - domain={{ domain }}
{% if 'traefik' in apps %}
      - traefik.enable=true
      - traefik.http.routers.qbittorrent.rule=Host(`qbittorrent.{{ domain }}`)
      - traefik.http.routers.qbittorrent.entrypoints=websecure
      - traefik.http.services.qbittorrent.loadbalancer.server.port=8082
      - traefik.http.routers.qbittorrent.service=qbittorrent
      - traefik.http.routers.qbittorrent.tls.certresolver=acme_provider
{% endif %}
{% if 'flame' in apps %}
      - flame.type=application
      - flame.name=Qbittorrent
      - flame.url=qbittorrent.{{ domain }}
      - flame.icon=download
{% endif %}

networks:
  {{ qbit_network }}:
    external: true

{% if 'nfs' == qbit_storage %}
volumes:
  downloads:
    driver_opts:
      type: "nfs" 
      o: "addr={{ qbit_nfs_server }},{{ qbit_nfs_opts }}"
      device: ":{{ qbit_nfs_download }}"

{% endif %}