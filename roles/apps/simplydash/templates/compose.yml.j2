version: "3.8"

services:
  simplydash:
    container_name: simplydash
    hostname: simplydash
    image: ghcr.io/robert-sandor/simplydash:{{ simplydash_version }}
    restart: unless-stopped
    user: "{{ ansible_facts.user_uid }}:{{ ansible_facts.user_gid }}"
    volumes:
      - {{ project_dir }}/simplydash/config:/app/config
      - {{ project_dir }}/simplydash/images:/app/images
      - /var/run/docker.sock:/var/run/docker.sock:ro
    networks:
      - {{ simplydash_network }}
    expose:
      - 8080
    labels:
      - traefik.enable=true
      - traefik.http.services.simplydash.loadbalancer.server.port=8080
      - traefik.http.routers.simplydash.rule=Host(`{{ domain }}`) || Host(`simplydash.{{ domain }}`)
      - traefik.http.routers.simplydash.entrypoints=websecure
      - traefik.http.routers.simplydash.service=simplydash

networks:
  {{ simplydash_network }}:
    external: true
