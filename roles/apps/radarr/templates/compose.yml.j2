version: "3.8"

services:
  radarr:
    container_name: radarr
    hostname: radarr
    image: ghcr.io/linuxserver/radarr:{{ radarr_version }}
    restart: unless-stopped
    environment:
      - PUID={{ ansible_facts.user_uid }}
      - PGID={{ ansible_facts.user_gid }}
      - TZ={{ timezone }}
      - DOCKER_MODS=ghcr.io/gilbn/theme.park:radarr
    volumes:
      - {{ project_dir }}/radarr/config:/config
{% if 'nfs' == radarr_data_storage %}
      - data:/data
{% elif 'path' == radarr_data_storage %}
      - {{ radarr_data_path }}:/data
{% endif %}
    networks:
      - {{ radarr_network }}
    expose:
      - 7878
    labels:
      - traefik.enable=true
      - traefik.http.services.radarr.loadbalancer.server.port=7878
      - traefik.http.routers.radarr.rule=Host(`radarr.{{ domain }}`)
      - traefik.http.routers.radarr.entrypoints=websecure
      - traefik.http.routers.radarr.service=radarr
      - simplydash.enable=true
      - simplydash.name=Radarr
      - simplydash.description=Movies Manager
      - simplydash.link=https://radarr.{{ domain }}
      - simplydash.group=media-management

networks:
  {{ radarr_network }}:
    external: true

{% if 'nfs' == radarr_data_storage %}
volumes:
  data:
    driver_opts:
      type: "nfs" 
      o: "addr={{ radarr_data_nfs_server }},{{ radarr_data_nfs_opts }}"
      device: ":{{ radarr_data_nfs_path }}"

{% endif %}