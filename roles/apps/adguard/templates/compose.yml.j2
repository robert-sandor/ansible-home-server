---
version: "3.8"

services:
  adguard:
    container_name: adguard
    hostname: adguard
    image: adguard/adguardhome:{{ adguard_version }}
    restart: unless-stopped
    environment:
      - "TZ={{ timezone }}"
    volumes:
      - {{ project_dir }}/adguard/work:/opt/adguardhome/work
      - {{ project_dir }}/adguard/conf:/opt/adguardhome/conf
    networks:
      - {{ adguard_network }}
    ports:
      - 53:53/tcp
      - 53:53/udp
    expose:
      - 3000
    labels:
      - traefik.enable=true
      - traefik.http.services.adguard.loadbalancer.server.port=3000
      - traefik.http.routers.adguard.rule=Host(`adguard.{{ domain }}`)
      - traefik.http.routers.adguard.entrypoints=websecure
      - traefik.http.routers.adguard.service=adguard
      - simplydash.enable=true
      - simplydash.name=Adguard Home
      - simplydash.description=Ad blocking DNS server @ {{ domain }}
      - simplydash.group=admin
      - simplydash.link=https://adguard.{{ domain }}

networks:
  {{ adguard_network }}:
    external: true
