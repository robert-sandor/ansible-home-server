version: "3.8"

services:
  adguard:
    container_name: adguard
    hostname: adguard
    image: adguard/adguardhome:{{ adguard_version }}
    restart: unless-stopped
    environment:
      TZ: {{ timezone }}
    volumes:
      - {{ project_dir }}/adguard/work:/opt/adguardhome/work
      - {{ project_dir }}/adguard/conf:/opt/adguardhome/conf
    networks:
      - {{ adguard_network }}
    ports:
    # DNS
      - 53:53/tcp
      - 53:53/udp
    # UI
      - 3000:3000/tcp
    labels:
      - domain={{ domain }}
{% if 'traefik' in apps %}
      - traefik.enable=true
      - traefik.http.routers.adguard.rule=Host(`adguard.{{ domain }}`)
      - traefik.http.routers.adguard.entrypoints=websecure
      - traefik.http.services.adguard.loadbalancer.server.port=3000
      - traefik.http.routers.adguard.service=adguard
      - traefik.http.routers.adguard.tls.certresolver=acme_provider
{% endif %}
{% if 'flame' in apps %}
      - flame.type=application
      - flame.name=adguard
      - flame.url=adguard.{{ domain }}
      - flame.icon=shield-check
{% endif %}
{% if 'watchtower' in apps %}
      - com.centurylinklabs.watchtower.enable=true
      - com.centurylinklabs.watchtower.monitor-only=true
{% endif %}

networks:
  {{ adguard_network }}:
    external: true
