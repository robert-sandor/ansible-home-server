version: "3.8"

services:

  watchtower:
    container_name: watchtower
    hostname: watchtower
    image: containrrr/watchtower:{{ watchtower_version }}
    restart: unless-stopped
    command:
      - "--schedule={{ watchtower_schedule }}"
      - "--label-enable"
      - "--no-startup-message"
{% if watchtower_monitor_only %}
      - "--monitor-only"
{% endif %}
{% if watchtower_discord %}
      - "--notifications=slack"
      - "--notification-slack-hook-url={{ watchtower_discord_hook }}/slack"
      - "--notification-slack-identifier=watchtower-{{ domain }}"
{% endif %}
    environment:
      - TZ={{ timezone }}
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - {{ watchtower_network }}
    labels:
      - com.centurylinklabs.watchtower.enable={{ watchtower_autoupdate | ternary('true', 'false') }}

networks:
  {{ watchtower_network }}:
    external: true
